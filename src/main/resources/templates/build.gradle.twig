plugins {
    id "io.ebean" version "12.1.8"
    id 'java'
    id 'idea'
    id 'maven-publish'
}

group = 'com.tifires'
sourceCompatibility = 8

repositories {
    mavenLocal()
    mavenCentral()
    jcenter()
}

ebean {
    debugLevel = 1
}

dependencies {
    compile 'com.tifires.genesis:core:0.3'
    compile 'io.ebean:ebean:12.1.8'
}
